<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>com.wanggaowan.ohosdevtools</id>
    <name>OhosDevTools</name>
    <vendor email="wanggaowan@163.com" url="https://github.com/wanggaowan/OhosDevTools"/>
    <xi:include href="plugin_desc.xml" />

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>

    <actions>
        <group id="OhosDevTools" text="Ohos Dev Tools" popup="true"
            class="com.wanggaowan.ohosdevtools.actions.ToolsActionGroup">
            <add-to-group group-id="ToolsMenu" anchor="last" />
            <action id="AndroidDevTools.ImportSameImageResAction"
                class="com.wanggaowan.ohosdevtools.actions.image.ImportSameImageResAction"
                text="导入不同分辨率下的相同文件" />
        </group>

        <group id="OhosDevTools.EditorPopupMenu">
            <action id="OhosDevTools.ExtractStr2L10n"
                class="com.wanggaowan.ohosdevtools.actions.translate.ExtractStr2L10nAction"
                text="提取为多语言" />
            <action id="OhosDevTools.ExtractStr2L10nWithTranslateAction"
                class="com.wanggaowan.ohosdevtools.actions.translate.ExtractStr2L10nWithTranslateAction"
                text="提取为多语言并翻译" />
            <action id="OhosDevTools.DeleteStringsSameKeyElementAction"
                class="com.wanggaowan.ohosdevtools.actions.DeleteStringsSameKeyElementAction"
                text="在所有string文件中删除此项" />
            <separator />
            <add-to-group group-id="EditorPopupMenu" anchor="first" />
        </group>

        <action id="OhosDevTools.TranslateStringsAction"
            class="com.wanggaowan.ohosdevtools.actions.translate.TranslateStringsAction"
            text="根据模版string.json翻译"
            description="根据模版string.json对应内容，将当前文件不存在的内容进行翻译并插入">
            <add-to-group group-id="CutCopyPasteGroup" anchor="last" />
        </action>
    </actions>

    <projectListeners>
        <listener class="com.wanggaowan.ohosdevtools.listener.MyProjectManagerListener"
            topic="com.intellij.openapi.project.ProjectManagerListener" />
    </projectListeners>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="BALLOON" id="com.wanggaowan.ohosdevtools.notification"
            isLogByDefault="false" />

        <projectConfigurable parentId="tools"
            instance="com.wanggaowan.ohosdevtools.settings.ProjectPluginSettingsConfigurable"
            id="OhosDevTools.ProjectPluginSettingsConfigurable" displayName="OhosDevTools" />

        <filePasteProvider
            implementation="com.wanggaowan.ohosdevtools.listener.ImportSameImageListener"
            order="first" />
        <refactoring.moveHandler
            implementation="com.wanggaowan.ohosdevtools.listener.ImportSameImageListener"
            order="first" />
    </extensions>
</idea-plugin>
